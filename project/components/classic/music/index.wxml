<!--components/classic/music/index.wxml-->
<view hidden="{{hidden}}" class="container">
  <image class="classic-img {{isPlaying ? 'rotation' : ''}}" src="{{img}}"/>
  <image class="player-img" bind:tap="onPlay" src="{{!isPlaying ? playSrc : pauseSrc}}"/>
  <image class="tag" src="./images/music@tag.png"/>
  <text>{{content}}</text>
</view>
 